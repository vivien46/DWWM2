{% extends "base.html.twig" %}

{% block title %}Gestion des Categories{% endblock %}

{% block body %}

<div class="text-center my-5">
    <h1 class="my-4">Gestion des Categories</h1>
    <div class="alert alert-info">ðŸ’¬ Vous trouverez ci-dessous le tableau contenant l'ensmble des categories du blog</div>

{% for message in app.flashes('success') %}
    <div class="col-md-5 mx-auto alert alert-success text-center">
        {{ message }}
    </div>
    {% endfor %}
<a href="{{ path('admin_new_category') }}" class="btn btn-primary mt-3">CrÃ©er une nouvelle categorie</a>
</div>

<table class="table table-bordered table-striped table-hover text-center">
    <thead class="table-dark">
        <tr>
            {% for colonne in colonnes %}
                {% if colonne != 'id' %}
                    <th>{{ colonne }}</th>
                {% endif %}
            {% endfor %}
            <th>Voir</th>
            <th>Editer</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td><a href="{{ path('blog_show', {"id": category.id }) }}" class="btn btn-info"><i class="fa-solid fa-eye" aria-hidden="true"></i></a></td>
                <td><a href="{{ path('admin_edit_category', {"id": category.id }) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square" aria-hidden="true"></i></a></td>
                <td><a href="{{ path('admin_delete_category', {"id": category.id }) }}" class="btn btn-danger"><i class="fa-solid fa-trash-can" aria-hidden="true"></i></a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}