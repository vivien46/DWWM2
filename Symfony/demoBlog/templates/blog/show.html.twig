{% extends "base.html.twig" %}

{% block body %}

	<div class="container text-center mt-5">
		<h1>{{ article.title }}</h1>
		<div class="card mt-5" style="width: 40rem; margin: 0 auto;">
			<img src="{{ asset('images/articles/' ~ article.image) }}" alt="Image de l'article">
			<div class="card-body mt-5">
				<p>{{ article.content | raw }}</p>
			</div>
			<div class="card-footer">
				<table class="table table-bordered">
					<tbody>
						<tr style="background: #8900E5; color:white;">
							<th scope="col">Date de publication</th>
							<th scope="col">Catégorie</th>
						</tr>
						<tr>
							<td>{{ article.createdAt | date('d/m/Y') }}
							</td>
							<td>
								<span class="badge rounded-pill text-bg-primary">{{ article.category.title }}</span>
							</td>
						</tr>
					</tbody>
				</table>
			</div>

		</div>
	</div>

	<div class="container my-5 text-center">
		<h2>Commentaires</h2>
		<div class="row">
			{% for comment in article.comments %}
				<div class="col-md-6">
					<div class="container my-4 border">
						<div class="py-4">
							{{ comment.author }}
							(<small>{{ comment.createdAt | date('d/m/Y à h:i:s') }}</small>)
						</div>
						<hr>
						<div>
							{{ comment.content | raw }}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
